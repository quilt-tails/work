<% provide(:title, '作成') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@memo) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div class="field">
        <%= f.text_area :content, placeholder: "メモを作成" %>
      </div>
      <%= f.submit "作成", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
